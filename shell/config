# Example devtools configuration

# Symlinked into home directoryhgrep
export DTC_EXISTS="${HOME}/devtools"

# Shell preferences
export DTC_SHARE_HISTORY=0
export DTC_RUN_LOGIN=1
export DTC_HISTSIZE=1000

# These aren't used on MacOS
unset DTC_XILINX_LICENSE_PATH
unset DTC_XILINX_ROOT
unset DTC_XILINX_VERSION

# Accept everything in the default my.sh
export DTC_USER_ENV="${DTC_EXISTS}/shell/my.sh"

# Keep all history together
setopt APPEND_HISTORY
export HISTTIMEFORMAT="%F %T "

# Prefer GNU tools installed with Homebrew to built-ins
export PATH=/opt/homebrew/bin:/opt/homebrew/opt/coreutils/libexec/gnubin:$PATH
