{
    "build": {
        "context": ".",
        "dockerfile": "./Dockerfile"
    },
    "containerUser": "developer",
    "customizations": {
        "vscode": {
            "settings": {
                // Eliminates need for .editorconfig
                "editor.renderWhitespace": "all",
                "files.insertFinalNewline": true,
                "files.trimTrailingWhitespace": true
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/sshd:1": {}
    },
    "hostRequirements": {
        "cpus": 2,
        "memory": "4gb",
        "storage": "16gb"
    },
    "mounts": [
        "source=lv,target=/persist,type=volume"
    ],
    // Run any setup that we couldn't do in the Dockerfile
    "postCreateCommand": {
        "Own Persistent Volume": "sudo chown -R ${whoami}: /persist",
        "Run Final Setup Script": "sudo .devcontainer/final.sh"
    },
    "remoteUser": "developer",
    "runArgs": [ // For C++ Debuggers
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "workspaceFolder": "sandboxes",
    "workspaceMount": "source=${localWorkspaceFolder},target=/sandboxes,type=bind,consistency=cached"
}
