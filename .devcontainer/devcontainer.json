{
    "build": {
        "args": {
          "APT_PROXY": "http://host.docker.internal:3142"
        },
        "context": ".",
        "dockerfile": "./Dockerfile"
    },
    "containerUser": "developer",
    "customizations": {
        "vscode": {
            "settings": {
                "editor.renderWhitespace": "all",
                "files.insertFinalNewline": true,
                "files.trimTrailingWhitespace": true
            },
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "ms-python.debugpy",
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens",
                "asciidoctor.asciidoctor-vscode"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/sshd:1": {}
    },
    "hostRequirements": {
        "cpus": 2,
        "memory": "4gb",
        "storage": "16gb"
    },
    "mounts": [
        "source=lv,target=/persist,type=volume"
    ],
    "postCreateCommand": "/bin/bash /workspaces/devtools/.devcontainer/post-create.sh",
    "remoteUser": "developer",
    "runArgs": [ // For C++ Debuggers
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "workspaceFolder": "/persist/sandboxes/devtools"
}
