{
    "build": {
        "args": {
            "APT_PROXY": "http://host.docker.internal:3142"
        },
        "context": ".",
        "dockerfile": "./Dockerfile"
    },
    "containerUser": "developer",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools-extension-pack",
                "ms-python.python",
                "ms-python.debugpy",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "editor.renderWhitespace": "all",
                "files.insertFinalNewline": true,
                "files.trimTrailingWhitespace": true
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/sshd:1": {}
    },
    "forwardPorts": [2222],
    "hostRequirements": {
        "cpus": 4,
        "memory": "8gb",
        "storage": "16gb",
        "gpu": "optional"
    },
    "mounts": [
        "source=devtools-persist,target=/persist,type=volume"
    ],
    "onCreateCommand": "/usr/local/bin/on-create.sh || true",
    "postCreateCommand": "/usr/local/bin/post-create.sh || true",
    "remoteUser": "developer",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "waitFor": "onCreateCommand",
    "workspaceFolder": "/persist"
}
